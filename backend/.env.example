# Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_key_change_this_in_production

# Database Configuration
DB_USER=accounting_user
DB_PASSWORD=accounting_pass
DB_HOST=localhost
DB_PORT=5432
DB_NAME=accounting_db

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:7392

# Wise API Configuration
WISE_API_TOKEN=your_wise_api_token_here
WISE_PROFILE_ID=your_wise_profile_id_here
WISE_API_BASE_URL=https://api.transferwise.com
WISE_WEBHOOK_SECRET=your_webhook_secret_here

# Wise SCA (Strong Customer Authentication)
# Private RSA key for signing requests (PEM format)
# Generate with: ssh-keygen -t rsa -b 4096 -f wise_sca_key
# Upload public key to Wise dashboard: Settings > API Tokens > Manage public keys
WISE_PRIVATE_KEY="-----BEGIN OPENSSH PRIVATE KEY-----
your_private_key_content_here
-----END OPENSSH PRIVATE KEY-----"
